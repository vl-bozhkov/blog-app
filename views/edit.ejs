<% include ./partials/header %>

<div class="container">
  <h1 class="display-4 text-center mt-5 mb-4">Edit <%=blog.title%></h1>
  <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    <div class="form-group ">
      <label for="title">Blog Title</label>

      <input value="<%=blog.title%>" type="text" name="blog[title]" placeholder="title" required class="form-control" id="title">
    
    </div>
    <div class="form-group ">
      <label for="image">Blog Image</label>
      <input value="<%=blog.image%>" type="text" name="blog[image]" placeholder="image" required class="form-control" id="image">  
    </div>
    <div class="form-group ">
    <label for="body">Blog Body</label>
    <textarea name="blog[body]" class="form-control" id="body" rows="3" required ><%=blog.body%></textarea>
    </div>
    <button type="submit" class="btn btn-light">Submit</button>
  </form>
</div>

<div class="mb-5 invisible">1</div>
<% include ./partials/footer %>